extends includes/layout
include includes/mixin

block content
    article.entry
        .entry-content
            //title
            .seventy-five-1-percent-bg-yellow
                .container.pt-lg-8.pt-md-7.pt-5.pb-lg-10
                    .row.gx-lg-5.gx-md-5.gy-5
                        .col-lg-12.col-md-12
                            h1.my-3 Our Team

            // teame cards
            .container.mt-lg-4.mt-md-2.mt-2.mb-10
                .row.gx-lg-3.gy-3
                    each persona in people
